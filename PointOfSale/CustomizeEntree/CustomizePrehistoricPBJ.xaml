<Page x:Class="PointOfSale.CustomizePrehistoricPBJ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="592"
      Title="CustomizePrehistoricPBJ">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="400"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="FontSize" Value="35"/>
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Hold Peanut Butter" Click="OnHoldPB"/>
        <Button Grid.Row="1" Content="Hold Jelly" Click="OnHoldJelly"/>
        <Button Grid.Row="2" Content="Done" Click="DoneSelected"/>
    </Grid>
</Page>
